<?xml version="1.0"?>
<template
        format="5"
        revision="3"
        name="Fragment for MVVM-Rhine"
        description="Creates a new Fragment of MVVM-Rhine."
        minApi="16"
        minBuildApi="8">

    <category value="Fragment"/>

    <dependency name="android-support-v4" revision="8"/>

    <parameter
            id="packageName"
            name="Package name"
            type="string"
            constraints="package"
            default="com.mycompany.myapp"/>

    <parameter
            id="objectKind"
            name="Object Kind"
            type="string"
            constraints="nonempty"
            default="Item"
            help="Other examples are 'Person', 'Book', etc."/>

    <parameter
            id="className"
            type="string"
            constraints="nonempty|class|unique"
            default="ItemFragment"
            suggest="${extractLetters(objectKind)}Fragment"
            name="Fragment class name"/>

    <parameter
            id="fragment_layout"
            type="string"
            constraints="layout|nonempty|unique"
            default="fragment_my"
            suggest="fragment_${extractLetters(objectKind?lower_case)}"
            name="layout file name"/>

    <parameter
            id="generateDelegateAndViewModel"
            name="Generate ViewDelegate And ViewModel"
            type="boolean"
            default="true"
            help="If true, ViewDelegate And ViewModel file will be generated"/>

    <parameter
            id="viewDelegateClass"
            type="string"
            constraints="nonempty|class|unique"
            default="MyViewDelegate"
            suggest="${extractLetters(objectKind)}ViewDelegate"
            visibility="generateDelegateAndViewModel"
            name="ViewDelegate class name"
            visible="true"/>

    <parameter
            id="viewModelClass"
            type="string"
            constraints="nonempty|class|unique"
            default="MyViewModel"
            visibility="generateDelegateAndViewModel"
            suggest="${extractLetters(objectKind)}ViewModel"
            name="ViewModel class name"/>

    <parameter
            id="generateKodeinModule"
            name="Generate DI module of Kodein"
            type="boolean"
            default="true"
            help="If true, KodeinModule file will be generated"/>

    <parameter
            id="kodeinModuleName"
            type="string"
            constraints="nonempty|class|unique"
            default="myKodeinModule"
            visibility="generateKodeinModule"
            suggest="${extractLetters(objectKind?lower_case)}KodeinModule"
            name="Kodein module name"/>

    <parameter
            id="fragmentBindingClass"
            type="string"
            constraints="nonempty|class|unique"
            default="MyFragmentBinding"
            visibility="false"
            suggest="Fragment${extractLetters(objectKind)}Binding"
            name="DataBinding class name"/>

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>templates_fragment.png</thumb>
    </thumbs>


    <globals file="globals.xml.ftl"/>
    <execute file="recipe.xml.ftl"/>

</template>
